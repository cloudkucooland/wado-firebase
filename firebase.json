{
	"hosting": {
		"predeploy": ["npm run build"],
		"public": "dist",
		"ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
		"redirects": [
			{
				"source": "/wado-dev/assets/:f*",
				"destination": "/assets/:f",
				"type": 301
			},
			{
				"source": "/wado-dev/:f*",
				"destination": "/:f",
				"type": 301
			}
		],
		"rewrites": [
			{
				"source": "*",
				"destination": "/index.html"
			}
		]
	}
}
